<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/main_title"
        android:id="@+id/MainTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/home_address"
        android:id="@+id/HomeAddress"
        android:layout_below="@+id/MainTitle"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/rideShareImageButton1"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="80dp"
        android:onClick="deepLinkToApp"
        android:tag="1"
        android:contentDescription="@string/accessibilityRideButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/price"
        android:id="@+id/rideShareTextView1a"
        android:layout_below="@+id/rideShareImageButton1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/surge_rate"
        android:id="@+id/rideShareTextView1b"
        android:layout_below="@+id/rideShareTextView1a"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rideShareImageButton2"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:onClick="deepLinkToApp"
        android:tag="2"
        android:layout_below="@+id/rideShareTextView1b"
        android:contentDescription="@string/accessibilityRideButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/price"
        android:id="@+id/rideShareTextView2a"
        android:layout_below="@+id/rideShareImageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/surge_rate"
        android:id="@+id/rideShareTextView2b"
        android:layout_below="@+id/rideShareTextView2a" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rideShareImageButton3"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:onClick="deepLinkToApp"
        android:tag="3"
        android:layout_below="@+id/rideShareTextView1b"
        android:contentDescription="@string/accessibilityRideButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/price"
        android:id="@+id/rideShareTextView3a"
        android:layout_below="@+id/rideShareImageButton3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/surge_rate"
        android:id="@+id/rideShareTextView3b"
        android:layout_below="@+id/rideShareTextView3a"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rideShareImageButton4"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:onClick="deepLinkToApp"
        android:tag="4"
        android:layout_below="@+id/rideShareTextView1b"
        android:contentDescription="@string/accessibilityRideButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/price"
        android:layout_alignParentEnd="true"
        android:id="@+id/rideShareTextView4a"
        android:layout_below="@+id/rideShareImageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:text="@string/surge_rate"
        android:layout_alignParentEnd="true"
        android:id="@+id/rideShareTextView4b"
        android:layout_below="@+id/rideShareTextView4a" />

</RelativeLayout>
